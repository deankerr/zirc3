{
  "name": "zirc3",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@orpc/client": "^1.13.0",
      "@orpc/contract": "^1.13.0",
      "@orpc/experimental-publisher": "^1.13.0",
      "@orpc/server": "^1.13.0",
      "@types/bun": "^1.3.5",
      "dotenv": "^17.2.3",
      "typescript": "^5.9.3",
      "zod": "^4.2.1"
    }
  },
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F @zirc3/web dev",
    "dev:server": "turbo -F @zirc3/server-orpc dev",
    "cli": "bun run --cwd apps/cli"
  },
  "devDependencies": {
    "turbo": "^2.7.1",
    "@biomejs/biome": "2.3.10",
    "ultracite": "6.5.0",
    "@types/bun": "^1.3.5"
  },
  "packageManager": "bun@1.3.5"
}
