{
  "name": "zirc3",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "@libsql/client": "^0.14.0",
      "libsql": "^0.5.22"
    }
  },
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F @zirc3/web dev",
    "dev:server": "turbo -F @zirc3/server-orpc dev",
    "cli": "bun run --cwd apps/cli"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.8",
    "ultracite": "6.4.0",
    "@types/bun": "^1.2.6"
  },
  "packageManager": "bun@1.3.4"
}
