{
  "name": "zirc3",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "@libsql/client": "^0.14.0",
      "libsql": "^0.5.22"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @zirc3/db db:push",
    "db:studio": "turbo -F @zirc3/db db:studio",
    "db:generate": "turbo -F @zirc3/db db:generate",
    "db:migrate": "turbo -F @zirc3/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.8",
    "ultracite": "6.4.0",
    "@types/bun": "^1.2.6"
  },
  "packageManager": "bun@1.3.3"
}
