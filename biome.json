{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "javascript": {
    "globals": ["Bun"]
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/packages/irc-framework"
    ]
  },
  "extends": ["ultracite/core", "ultracite/solid"],
  "linter": {
    "rules": {
      "style": {
        "useConsistentTypeDefinitions": "off",
        "useBlockStatements": "off"
      },
      "nursery": {
        "noShadow": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["apps/web/**"],
      "linter": {
        "rules": {
          "complexity": {
            "noUselessUndefinedInitialization": "off"
          },
          "suspicious": {
            "noAssignInExpressions": "off"
          }
        }
      }
    }
  ]
}
