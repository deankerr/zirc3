{
  "name": "@zirc3/server",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    "./types": "./src/types.ts"
  },
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run src/index.ts",
    "dev:hot": "bun run --hot src/index.ts",
    "start": "bun run dist/index.mjs"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.4.0",
    "@zirc3/db": "workspace:*",
    "dotenv": "^17.2.3",
    "elysia": "^1.4.19",
    "irc-framework": "^4.14.0",
    "pino": "^10.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/bun": "^1.3.4",
    "tsdown": "^0.16.8",
    "@zirc3/config": "workspace:*"
  }
}
